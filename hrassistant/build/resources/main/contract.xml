<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="Model.Contract" table="Contract">
        <id name="usernameEmployee" column="usernameEmployee"/>
        <property name="grossSalary" column="grossSalary"/>
        <property name="hireDate" column="hireDate"/>
        <property name="type" column="type"/>
        <property name="duration" column="duration"/>
        <property name="expirationDate" column="expirationDate"/>
    </class>

</hibernate-mapping>